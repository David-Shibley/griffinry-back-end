extends layout
  
block content
  if !error
    main
      div.user-data.row
        h1.visible Welcome to #{user_data[0].User_Name}'s Griffinry!
        a(href='/users/#{user_data[0].id}/edit') 
          p Edit
        a(href='/users/#{user_data[0].id}/delete')
          p Delete
      p Age: #{moment(user_data[0].DOB).fromNow(true)} old
      p #{user_data[0].About_Me}
      if user_data[0].Name
        h2 Pets
        ul
          each pet in user_data
            li.col-3
            img(src='/images/#{pet.Pet_Id.toLowerCase()}_#{pet.Color.toLowerCase()}.png')
            span #{pet.Name}
            span #{pet.Pet_Id}
  else
    h1=error
